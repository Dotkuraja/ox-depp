<% title ="Edit Passengers" %>
<%- include("layout/header") %>

<div class="container">
   
    <div class="row my-4">
        <div class="col-md-12">
            <h2>Edit Passengers</h2>                
            <form action="/edit/<%- passa['_id']%>" method="POST">
            
                <div class="form--group">
                    <label>Firstname</label>
                    <input type="text" name="fname" class="form-control" value="<%- passa['fname'] %>">
                </div>
                <div class="form--group">
                    <label>Lastname</label>
                    <input type="text" name="lname" class="form-control" value="<%- passa['lname'] %>">
                </div>
                <div class="form--group">
                    <label>Gender</label> 
                    &nbsp; Male<input type="radio" name="sex" value="Male" class="" required
                    <% if(typeof sex !="undefined" && sex.check){%> <%- passa['sex'] %> <%}%> >
                    &nbsp; Female<input type="radio" name="sex" value="Female" class="" required
                    <% if(typeof sex !="undefined" && sex == "Female"){%> checked="checked" <%}%> >
                </div>
                <div class="form--group">
                    <label>Mobile</label>
                    <input type="number" name="mobile" class="form-control" value="<%- passa['mobile'] %>">
                </div>
                <div class="form--group">
                    <label>Email</label>
                    <input type="email" name="email" class="form-control" value="<%- passa['email'] %>">
                </div>
                <div class="form--group">
                <% let dest=["Lagos", "Kano", "Abia", "Adamawa", "Borno", "Delta", "Edo", "Kaduna", "Osun"] %>
                <label>destination <select name="destination"></label>
                    <option value=""><%- passa['destination'] %></option>
                <% dest.forEach(function(nation) { %>
                    <option value="<%-nation%>"><%-nation%></option>
                <% }) %>
                </select> 
                </div>
                <input type="hidden" name="edit" value="<%= passa %>">

                <button type="submit" class="btn btn-primary" value="<%= passa %>">update</button>
            </form>
        </div>
    </div>
</div>

<%- include("layout/footer") %>