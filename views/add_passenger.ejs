<% title="Register" %>
<%- include("layout/header") %>

    <div class="container">
        <div class="row my-4">
            <div class="col-md-12">
                <h2>OX-Depp Air Register</h2>

            <% if(success != "undefined"){ %>
                <p style="color: blue;"><%= success %></p>
            <% } %>
            <% if(er_msg != "undefined"){ %>
                <p style="color: brown;"><%= er_msg %></p>
            <% } %>

                <form action="/signup" method="POST">
                    <div class="form--group">
                        <label>Firstname</label>
                        <input type="text" name="fname" class="form-control" required
                        value="<% typeof fname != "undefined" ? fname : " " %>">
                    </div>
                    <div class="form--group">
                        <label>Lastname</label>
                        <input type="text" name="lname" class="form-control" required
                        value="<% typeof lname != "undefined" ? lname : " " %>">
                    </div>
                    <div class="form--group">
                        <label>Gender</label> 
                        &nbsp; Male<input type="radio" name="sex" value="Male" class="" required
                        <% if(typeof sex != "undefined" && sex === 'Male'){ %> checked="checked" <%}%>>
                        &nbsp; Female<input type="radio" name="sex" value="Female" class="" required
                        <% if(typeof sex != "undefined" && sex === 'Female'){%> checked="checked" <%}%>>
                    </div>
                    <div class="form--group">
                        <label>Mobile</label>
                        <input type="number" name="mobile" class="form-control" required
                        <% typeof mobile != "undefined" ? mobile : "" %>>
                    </div>
                    <div class="form--group">
                        <label>Email</label>
                        <input type="email" name="email" class="form-control" required
                        <% typeof email != "undefined" ? email : "" %>>
                    </div>
                    <div class="form--group">
                    <% let dest=["Lagos", "Kano", "Abia", "Adamawa", "Borno", "Delta", "Edo", "Kaduna", "Osun"] %>
                    <label>destination <select name="destination"></label>
                        <option value="">Select destination</option>
                    <% dest.forEach(function(nation) { %>
                        <option value="<%-nation%>">
                             "<% if(typeof destination != "undefined"){%> selected="selected" <%}%>" <%-nation%>
                        </option>
                    <% }) %>
                    </select> 
                    </div>

                    <div class="form--group">
                        <label>Passport</label>
                        <input type="file" name="passport" class="form-control" required
                        value="<% typeof passport != "undefined" ? passport : " " %>">
                    </div>

                    <div class="form--group">
                        <label>Password</label>
                        <input type="password" name="password" class="form-control" required
                        value="<% typeof password != "undefined" ? password : "" %>">
                    </div>

                    <input type="submit" class="btn btn-primary" value="signup">
                </form>
            </div>
        </div>
    </div>


<%- include("layout/footer") %>